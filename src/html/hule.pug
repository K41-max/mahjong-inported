- var page = 'hule'

doctype html
html(lang="ja")

  head
    include ../html-include/meta.pug

    title 電脳麻将: 和了点計算
    meta(name="description" content="Javascriptで和了点を計算")

    include ../html-include/style.pug

    script(src="js/majiang.js" defer)
    script(src="js/hule.js" defer)

  body.demo
    include ../html-include/navi.pug
    include ../html-include/loaddata.pug
    .version

    form
      div 牌姿: 
        input(name="paistr" type="text")
        input(type="submit" value="決定")
        input(type="reset" value="クリア")
      div
        span
          input(name="zimo" type="radio" value="1")
          | ツモ
          input(name="zimo" type="radio" value="0" checked)
          | ロン
        span
          |  場風: 
          select(name="zhuangfeng")
            option(value="0" selected) 東
            option(value="1") 南
            option(value="2") 西
            option(value="3") 北
          |  自風: 
          select(name="menfeng")
            option(value="0") 東
            option(value="1" selected) 南
            option(value="2") 西
            option(value="3") 北
      div
        span
          input(name="haidi" type="checkbox" value="1")
          | 海底 
          input(name="lingshang" type="checkbox" value="1")
          | 嶺上 
          input(name="qianggang" type="checkbox" value="1")
          | 槍槓 
    hr
    
    .huledialog.hide
      .hule
        .shoupai
          .bingpai
          .fulou

        table.hupai
          tr.r_hupai
            td.name
            td.fanshu
          tr.r_defen
            td.defen(colspan="2")
